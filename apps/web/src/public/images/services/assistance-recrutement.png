    <script>
        $(document).ready(function () {
            $(".actives").prop("disabled",true);
            $(document).on('click','.langue', function(e){
                e.preventDefault();
                var url = $(this).data('url');
                if(url != ''){
                    $.ajax({
                        type: 'post',
                        url: url,
                        datatype: 'json',
                        beforeSend: function () {},
                        success: function (json) {
                            if(json.statuts == 0){
                                window.location.reload();
                            }
                        },
                        complete: function () {},
                        error: function(jqXHR, textStatus, errorThrown){}
                    });
                }
            });
            $(document).on('submit','#subscribe',function (e) {
                e.preventDefault();
                var email = $('#emailS').val(),
                    url = $(this).attr('action');
                if (email!='' && url!=''){
                    $.ajax({
                        type: 'post',
                        url: url,
                        data: 'email='+email,
                        datatype: 'json',
                        beforeSend: function () {
                            $('#submit_btns').prop('disabled',true).val('Chargement... ');
                        },
                        success: function (json) {
                            if (json.statuts == 0){
                                $('#emailS').val('');
                                alert(json.mes);
                            }else{
                                alert(json.mes);
                            }
                        },
                        complete: function () {
                            $('#submit_btns').prop('disabled',true).val('Envoyez le message');
                        },
                        error: function(jqXHR, textStatus, errorThrown){
                        }
                    });
                }else{
                    alert('Veuillez remplir l\'adresse email');
                }
            });
        });
    </script>
